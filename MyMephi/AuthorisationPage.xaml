<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MyMephi.AuthorisationPage">
    <ContentPage.Content>

        <Grid RowSpacing="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="0.28*" />
                <RowDefinition Height="0.36*" />
                <RowDefinition Height="0.46*" />
            </Grid.RowDefinitions>

            <Image Source="HomePageBackround.jpg"  Aspect="AspectFill" Grid.Row="0" Grid.RowSpan="3"/>

            <!--/
            <BoxView BackgroundColor="Gainsboro" Grid.Row="1"/>
            <BoxView BackgroundColor="Olive" Grid.Row="2"/>
            -->

            <StackLayout  Margin = "40,0,40,0"  TranslationY="200" >
                <Entry  Placeholder="Login" PlaceholderColor ="Black" />
                <Entry  Placeholder="Password" TextColor="Black" PlaceholderColor ="Black"/>
                <Button  Text="Войти" Margin="100,0,100,0"  Clicked="ToBarPage" />
            </StackLayout>
            

        </Grid>


    </ContentPage.Content>
</ContentPage>